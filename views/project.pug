extends layout

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h2= project.project_name
        p= project.description

      .project-tech-links-box.box
        h3 Technologies
        ul.skills
          each technology in project.technologies
            li
              img.icon(src=`/static/icons/${technology}.svg`, alt=technology)
        a.btn-link(href=project.live_link, target="_blank") Live Demo
        a.btn-link(href=project.github_link, target="_blank") GitHub Repo

    .project-img-box.box
      each image in project.image_urls
        img.project-img(src=image, alt=project.description)

  nav.nav
    a(href='/')
      span &larr;
      |  Back
